{
  "name": "an-frame-cli",
  "version": "1.0.2",
  "description": "一个自定义的前端构建框架CLI，支持React、Vue和微前端qiankun",
  "main": "lib/index.js",
  "bin": {
    "an": "bin/an.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:patch": "npm run build && npm run version:patch",
    "release:minor": "npm run build && npm run version:minor",
    "release:major": "npm run build && npm run version:major",
    "publish:manual": "npm run build && npm test && echo '请手动运行以下命令完成发布:' && echo '1. npm run version:patch (或 version:minor/version:major)' && echo '2. git add package.json && git commit -m \"chore: release vX.X.X\"' && echo '3. git tag vX.X.X && git push && git push --tags' && echo '4. npm publish'",
    "clean": "rm -rf lib/ test-output*/"
  },
  "keywords": [
    "cli",
    "react",
    "vue",
    "webpack",
    "qiankun",
    "micro-frontend",
    "scaffold"
  ],
  "author": "andym",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "inquirer": "^8.2.5",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^10.1.0",
    "download-git-repo": "^3.0.2",
    "handlebars": "^4.7.7",
    "execa": "^5.1.1",
    "validate-npm-package-name": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/inquirer": "^8.2.5",
    "@types/fs-extra": "^9.0.13",
    "@types/validate-npm-package-name": "^4.0.0",
    "typescript": "^4.8.4",
    "jest": "^29.2.2",
    "@types/jest": "^29.2.3",
    "ts-jest": "^29.0.3"
  },
  "files": [
    "bin",
    "lib",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andym/an-frame-cli.git"
  },
  "bugs": {
    "url": "https://github.com/andym/an-frame-cli/issues"
  },
  "homepage": "https://github.com/andym/an-frame-cli#readme"
}
