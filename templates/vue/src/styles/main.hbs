* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333;
  line-height: 1.6;
}

#app {
  min-height: 100vh;
  padding: 20px;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.page {
  background: white;
  border-radius: 8px;
  padding: 30px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.navigation {
  background: #42b883;
  padding: 1rem 0;
  margin-bottom: 2rem;
  border-radius: 8px;
}

.navigation a {
  color: white;
  text-decoration: none;
  margin: 0 15px;
  font-weight: 500;
  padding: 8px 16px;
  border-radius: 4px;
  transition: background-color 0.3s;
}

.navigation a:hover,
.navigation a.router-link-active {
  background-color: rgba(255, 255, 255, 0.2);
}

.counter {
  margin: 20px 0;
  text-align: center;
}

.counter button {
  background-color: #42b883;
  border: none;
  color: white;
  padding: 10px 20px;
  margin: 0 10px;
  cursor: pointer;
  border-radius: 5px;
  font-size: 16px;
  transition: background-color 0.3s;
}

.counter button:hover {
  background-color: #369870;
}

.counter span {
  margin: 0 15px;
  font-size: 18px;
  font-weight: bold;
}