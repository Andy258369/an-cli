.App {
  text-align: center;
}

.App-header {
  background-color: #282c34;
  padding: 20px;
  color: white;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.counter {
  margin: 20px 0;
}

.counter button {
  background-color: #61dafb;
  border: none;
  color: #282c34;
  padding: 10px 20px;
  margin: 0 10px;
  cursor: pointer;
  border-radius: 5px;
  font-size: 16px;
}

.counter button:hover {
  background-color: #21cfc5;
}

.counter span {
  margin: 0 15px;
  font-size: 18px;
  font-weight: bold;
}

.navigation {
  margin: 20px 0;
}

.navigation a {
  color: #61dafb;
  text-decoration: none;
  margin: 0 15px;
  font-size: 18px;
}

.navigation a:hover {
  text-decoration: underline;
}

.main-content {
  margin-top: 20px;
  padding: 20px;
  background-color: #f8f9fa;
  border-radius: 8px;
  color: #282c34;
}