.App {
  text-align: center;
}

.App-header {
  background-color: #282c34;
  padding: 20px;
  color: white;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: calc(10px + 2vmin);
}

.counter {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin: 2rem 0;
  
  button {
    background-color: #61dafb;
    border: none;
    color: #282c34;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1.2rem;
    font-weight: bold;
    
    &:hover {
      background-color: #21a9c7;
    }
  }
  
  span {
    font-size: 1.2rem;
    min-width: 100px;
  }
}

.navigation {
  display: flex;
  gap: 1rem;
  margin: 2rem 0;
  
  a {
    color: #61dafb;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid #61dafb;
    border-radius: 4px;
    transition: all 0.3s ease;
    
    &:hover {
      background-color: #61dafb;
      color: #282c34;
    }
  }
}

.main-content {
  margin-top: 2rem;
  width: 100%;
  max-width: 800px;
}

.page {
  text-align: left;
  
  h2 {
    color: #61dafb;
    margin-bottom: 1rem;
  }
  
  ul {
    text-align: left;
    
    li {
      margin-bottom: 0.5rem;
    }
  }
}

#micro-container {
  width: 100%;
  height: 400px;
  border: 1px solid #61dafb;
  border-radius: 8px;
  margin-top: 2rem;
}